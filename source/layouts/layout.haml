%html{:class => "no-js"}
  <!--<![endif]-->
  %head
    %meta{:charset => "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", :content =>"IE=edge,chrome=1"}

    -# Pull in the page title
    %title= current_page.data.title

    %meta{:name => "description", :content => current_page.data.description}
    %meta{:name => "author", :content => "Simon Ganz"}
    -# You may wish to remove the 'initial scale=1.0' for non-responsive layouts
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}

    -# Facebook OpenGraph tags
    %meta{:property => "og:title", :content => current_page.data.title}    
    %meta{:property => "og:site_name", :content => "SimonGanz.com"}
    %meta{:property => "og:url", :content => "http://simonganz.com#{current_page.url}"}
    %meta{:property => "og:description", :content => current_page.data.description}
    %meta{:property => "og:image", :content => current_page.data.image}

    -# Place favicon.ico and apple-touch-icon.png in the root directory
    
    %link{href: "/feed.xml", type: "application/atom+xml", rel: "alternate", title: "SimonGanz.com"}

    / TypeKit include
    = javascript_include_tag "//use.typekit.net/ice8xwx.js"
    %script{:type=>"text/javascript"}
      try{Typekit.load();}catch(e){}
    
    = stylesheet_link_tag "screen" 
    = javascript_include_tag "libs/modernizr-2.6.1.min"
    
    %script{:type=>"text/javascript"}
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-41213917-1']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body{:class => current_page.data.bodyclass}
    /[if lt IE 7]
      %p.chromeframe
        You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.

    .container
    
      %header.title{role: "banner"}
        %h1
          %a{href: "/", title: "Simon Ganz.com"} 
            Simon Ganz 
      %nav{role: "navigation"}
        %ul
          %li
            %a{href: "http://twitter.com/simonganz", title: "@simonganz"} Twitter
          %li
            %a{href: "/projects/", title: "Projects", class: selected_class(current_page, "projects")} Projects
          %li
            %a{href: "/about/", title: "About", class: selected_class(current_page, "about")} About
            
      #main-content{:role => "main"}
        
        -# Page content gets rendered here
        = yield

    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"
    :javascript
      window.jQuery || document.write('<script src="/javascripts/libs/jquery-1.9.0.min.js"><\/script>')

    -# Holder.js - canvas-generated placeholder images for prototyping
    / = javascript_include_tag "libs/holder"

    = javascript_include_tag "libs/bigfoot.min", "plugins", "script"
